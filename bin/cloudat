#!/usr/bin/env ruby
# vim: set filetype=ruby:

require 'cloudat'
require 'cloudat/dsl'

if ARGV.length > 0
  config = Cloudat::Configuration.new
  plan_file = File.read(ARGV[0])
  plan = Cloudat::Dsl::Plan.new(config)
  plan.instance_eval(plan_file)
else
  puts 'Usage: bundle exec cloudat plan_file.rb'
end
